<div class="cocktail_banner"></div>
<div class="container">
  <h1><%= @cocktail.name %></h1>
  <h3>
    <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <div class="card">
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <br>
      <%= link_to 'Remove Ingredient', dose_path(dose), method: :delete %>
      </div>
      </li>
      <% end %>
      <ul>
  </h3>

  <div class="links">
  <%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail) %>

  </div>
</div>
