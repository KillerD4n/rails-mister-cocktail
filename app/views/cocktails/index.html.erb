<div class="banner"></div>


<div class="container">
<h1>Cocktail List</h1>

<div class = "cards">
  <div class="row">
<% @cocktails.each do |cocktail| %>
  <div class="col-md-4">
  <div class = "cocktail_card "><%= cl_image_tag cocktail.photo, height: 300, width: 350, crop: :thumb %>
    <br>
      <%= link_to cocktail.name, cocktail_path(cocktail) %></div>
  </div>
<% end %>
</div>
</div>
</div>
